# Configuration du serveur Wayne
PORT=3000
NODE_ENV=production

# Base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wayne_db
DB_USER=wayne
DB_PASSWORD=wayne_secure_password_change_me

# JWT Secret (GÉNÈRE UN SECRET FORT EN PRODUCTION !)
JWT_SECRET=change_this_to_a_very_strong_random_secret_in_production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=*

# Storj Master Credentials (pour création automatique de buckets)
STORJ_MASTER_ACCESS_KEY_ID=your_storj_master_access_key_id
STORJ_MASTER_SECRET_ACCESS_KEY=your_storj_master_secret_access_key
STORJ_ENDPOINT=https://gateway.storjshare.io

# Clé de chiffrement pour les credentials Storj stockés
STORJ_ENCRYPTION_KEY=change_this_to_a_very_strong_random_key_in_production

